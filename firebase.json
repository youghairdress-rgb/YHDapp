{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [],
    "source": "functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "rewrites": [
    {
      "source": "/requestDiagnosis",
      "function": "requestDiagnosis"
    },
    {
      "source": "/generateHairstyleImage",
      "function": "generateHairstyleImage"
    },
    {
      "source": "/refineHairstyleImage",
      "function": "refineHairstyleImage"
    },
    {
      "source": "/createFirebaseCustomToken",
      "function": "createFirebaseCustomTokenV2"
    },
    {
      "source": "/analyzeTrends",
      "function": "analyzeTrends"
    },
    {
      "source": "/mergeUserData",
      "function": "mergeUserData"
    },
    {
      "source": "/sendPushMessage",
      "function": "sendPushMessage"
    },
    {
      "source": "/analyzeHairstyle",
      "function": "analyzeHairstyle"
    }
  ]
}